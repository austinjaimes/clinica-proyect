---
    import BaseLayout from "@/layouts/BaseLayout.astro";
    import { getLocaleFromUrl } from "@/js/localeUtils";
    import { getTranslatedData } from "@/js/translationUtils";
    import NavKrida from "@/components/nav/NavKrida.astro"
    import WhatsappButton from "@/components/whatsapp/WhatsappButton.astro"
    import ImagePage from "@/components/image/ImagePage.astro"
    import InfoRehabilitacionDeportiva from "@/components/tratamientos-cards/InfoRehabilitacionDeportiva.astro"

    const currLocale = getLocaleFromUrl(Astro.url);
    const siteData = getTranslatedData("siteData", currLocale);
---

