---
import doctorImage from "@images/hero/doctor_2-min.png";
import backgroundImage from "@images/hero/hero_bg_3-min.png";
import { Image } from "astro:assets";

import Button from "@/components/button/Button.astro";
import { getLocaleFromUrl } from "@/js/localeUtils";
import { getLocalizedRoute, getTranslatedData, useTranslations } from "@/js/translationUtils";
import HeroCarousel from "./HeroCarousel.astro";

const currLocale = getLocaleFromUrl(Astro.url);
const t = useTranslations(currLocale);
---

<style>
	.mtstyle {
		margin-top: 30px;
	}
</style>

<section style="background-color: black;" id="inicio"
	class:list={[
		"relative isolate flex w-full items-center overflow-hidden",
		"mx-auto rounded-b-2xl shadow-md md:rounded-b-3xl",
	]}
	aria-label="Hero section"
>
	<!-- <Image
		src={backgroundImage}
		alt="Blue healthcare background"
		class="pointer-events-none absolute inset-0 z-0 h-full w-full object-cover"
		aria-hidden="true"
	/> -->

	<div
		class="site-container relative flex h-full min-h-full grow flex-col items-center justify-between gap-8 md:flex-row lg:px-10 mtstyle" 
	>
		<div id="hero-shapes-trigger" class="max-w-2xl flex-1 pt-30 md:py-44 lg:pb-50">
			<h1
				style="font-family: 'Nunito', sans-serif; font-weight: 800;   color: #ffffff;"
				data-aos-trigger="#hero-shapes-trigger"
				data-aos="fade-right"
				class="text-primary leading-tighter font-heading mb-4 text-4xl font-extrabold md:text-5xl xl:text-7xl"
			>
				Profesionales en la materia
				<!-- <span class="text-accent-400">Healthier </span>
				Lives -->
			</h1>
			<!-- cambie text-muted-foreground y añadi el color #f5f5f5  -->
			<p
				data-aos-trigger="#hero-shapes-trigger"
				data-aos="fade-right"
				data-aos-delay=".2"
				class="mb-8 text-lg md:text-xl"
				style="font-family: 'Nunito', sans-serif; font-weight: 300; color: #f5f5f5;"
			>
				Recupera tu mejor versión con terapia integral, medicina regenerativa y traumatología.
			</p>
			<Button
				type="button"
				href="#testimonios"
				variant="primary"
				class="md:text-lg"
				aria-label="Book An Appointment"
				data-aos-trigger="#hero-shapes-trigger"
				data-aos="fade-right"
				data-aos-delay=".4"
				style="font-family: 'Nunito', sans-serif; font-weight: 400;"
			>
				VER TESTIMONIOS  >
			</Button>
		</div>
		<div
			class="xs:h-[360px] mt-auto flex h-[300px] justify-end md:h-[500px] md:pt-20 lg:h-[600px] xl:h-[700px]"
		>
		<HeroCarousel />
			<!-- <Image
				src={doctorImage}
				alt="Smiling healthcare professional with stethoscope"
				class="m-0 h-full w-auto object-contain p-0 align-bottom"
				width={700}
				densities={[1.5, 2]}
				loading="eager"
			/> -->
		</div>
	</div>
</section>
