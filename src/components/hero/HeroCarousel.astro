<style>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: "Comic Neue", cursive;
    background-color: #f0f0f0;
  }

  #gallery {
    width: 100%;
    padding: 3rem 1rem;
    display: flex;
    justify-content: center;
    align-items: center;
	margin-top: -100px;
  }

  #carousel {
    position: relative;
    width: 100%;
    max-width: 500px;
    overflow: hidden;
    border-bottom: 12px solid #ccc;
	border-right: 12px solid #ccc;
    box-shadow: 0 12px 20px rgba(0, 0, 0, 0.1);
    border-radius: 0 16px 16px 16px;
    background: transparent;
  }

  #carousel-track {
    display: flex;
    transition: transform 0.8s ease-in-out;
  }

  #carousel-track > div {
    min-width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  #carousel-track img {
    width: 100%;
    height: 100%;
    max-height: 520px;
    object-fit: cover;
    border-bottom: 4px solid transparent;
	border-right: 4px solid transparent;
    border-radius: 16px 16px 16px 16px;
  }

  #prev, #next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    font-size: 2rem;
    background: rgba(255, 255, 255, 0.8);
    border: none;
    padding: 0.6rem 1rem;
    border-radius: 50%;
    cursor: pointer;
    transition: background 0.3s;
    z-index: 20;
  }

  #prev:hover, #next:hover {
    background: rgba(255, 255, 255, 1);
  }

  #prev { left: 1rem; }
  #next { right: 1rem; }

  @media (max-width: 768px) {
    #prev, #next {
      font-size: 1.5rem;
      padding: 0.4rem 0.8rem;
    }

    #carousel-track img {
      max-height: 300px;
    }

	#gallery {
		margin-top: 0px;
	}
  }
</style>

<section id="gallery">
  <div id="carousel">
    <div id="carousel-track">
      <div><img src="https://clinicasantalucia.pe/wp-content/uploads/2025/04/traumatologia-soluciones-lesiones.jpg" alt="Imagen 1" /></div>
      <div><img src="https://clinicasantalucia.pe/wp-content/uploads/2025/04/traumatologia-soluciones-lesiones.jpg" alt="Imagen 2" /></div>
      <div><img src="https://clinicasantalucia.pe/wp-content/uploads/2025/04/traumatologia-soluciones-lesiones.jpg" alt="Imagen 3" /></div>
    </div>

	<button id="prev">&#10094;</button>
    <button id="next">&#10095;</button>
  </div>
</section>

<script>
  const track = document.getElementById("carousel-track");
  const slides = document.querySelectorAll("#carousel-track > div");
  const prev = document.getElementById("prev");
  const next = document.getElementById("next");

  let index = 0;

  function updateSlidePosition() {
    track.style.transform = `translateX(-${index * 100}%)`;
  }

  next.addEventListener("click", () => {
    index = (index + 1) % slides.length;
    updateSlidePosition();
  });

  prev.addEventListener("click", () => {
    index = (index - 1 + slides.length) % slides.length;
    updateSlidePosition();
  });

  setInterval(() => {
    index = (index + 1) % slides.length;
    updateSlidePosition();
  }, 9000);
</script>
