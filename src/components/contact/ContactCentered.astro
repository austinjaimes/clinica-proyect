---
import Divider from "@/components/divider/Divider.astro";
import ContactForm from "@/components/forms/ContactFormTwoCol.astro";
import { getLocaleFromUrl } from "@/js/localeUtils";
import { getLocalizedRoute, getTranslatedData, useTranslations } from "@/js/translationUtils";
const currLocale = getLocaleFromUrl(Astro.url);
const t = useTranslations(currLocale);
---

<section id="contact" class="site-container scroll-mt-20 py-12">
	<div class="mx-auto max-w-3xl">
		<div class="text-center">
			<h2 class="h1 text-primary">Contact Us</h2>
			<p class="text-muted-foreground mx-auto mt-4 mb-8 max-w-xl text-lg">
				Schedule a consultation and start feeling better today!
			</p>
		</div>

		<div class="bg-primary-100/80 mx-auto max-w-2xl rounded-xl p-8 text-left shadow-md">
			<h3 class="font-heading mb-6 text-2xl font-bold">Send Us A Message</h3>
			<ContactForm />
		</div>
	</div>
</section>
