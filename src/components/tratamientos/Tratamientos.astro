<style>
  .carousel {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    padding-bottom: 1rem;
  }

  .carousel::-webkit-scrollbar {
    display: none;
  }

  .card {
    min-width: 260px;
    height: 460px; /* altura mayor */
    background: #1e1e1e;
    color: white;
    border-radius: 1rem;
    padding: 1rem;
    flex-shrink: 0;
    scroll-snap-align: start;
    transition: transform 0.3s ease;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    justify-content: space-between; /* para separar el contenido y botón */
  }

  .card:hover {
    transform: scale(1.05);
  }

  .card img {
    width: 100%;
    height: 260px;
    object-fit: cover;
    border-radius: 0.75rem;
    margin-bottom: 2rem;
  }

  .card-title {
    font-size: 1.25rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .card-text {
    font-size: 0.95rem;
    color: #ccc;
    flex-grow: 1; /* para que el texto ocupe espacio y empuje el botón abajo */
  }

  .btn-read-more {
    background-color: #3b82f6; /* azul */
    color: white;
    border: none;
    padding: 0.5rem 1.25rem;
    border-radius: 9999px;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    transition: background-color 0.3s ease;
    font-size: 0.9rem;
  }

  .btn-read-more:hover {
    background-color: #2563eb; /* azul más oscuro */
  }

  @media (min-width: 768px) {
    .carousel {
      padding-inline: 2rem;
    }
  }
</style>

