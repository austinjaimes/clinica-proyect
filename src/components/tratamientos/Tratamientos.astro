  }

  /* Flechas */
  .arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(30, 30, 30, 0.8);
    border-radius: 50%;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background-color 0.3s ease;
    box-shadow: 0 4px 8px rgba(0,0,0,0.4);
    z-index: 10;
  }

  .arrow:hover {
    background: #3b82f6;
  }

  .arrow svg {
    fill: white;
    width: 20px;
    height: 20px;
  }

  .arrow-left {
    left: 0.5rem;
  }

  .arrow-right {
    right: 0.5rem;
  }

  @media (min-width: 768px) {
    .carousel {
      padding-inline: 2rem;
    }
  }
</style>

